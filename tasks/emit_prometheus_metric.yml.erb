---
image_resource:
  type: docker-image
  source:
    repository: buildpack-deps
    tag: trusty

params:
  PROMETHEUS_GATEWAY_URL: ((prometheus_gateway_url))
  ATC_URL: ((atc_url))

platform: linux

run:
  path: bash
  args:
    - -c
    - set -x
    - export sanitized_name=`echo <%= name %> | sed 's/\./_/g'`
    - curl -X POST ${PROMETHEUS_GATEWAY_URL}/metrics/job/oxygen_mask --data-binary $'# TYPE ${sanitized_name} gauge\n ${sanitized_name} <%= value %>\n' 