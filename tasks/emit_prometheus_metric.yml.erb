---
image_resource:
  type: docker-image
  source:
    repository: buildpack-deps
    tag: trusty

params:
  PROMETHEUS_GATEWAY_URL: ((prometheus_gateway_url))
  ATC_URL: ((atc_url))

platform: linux

run:
  path: bash
  args:
    - -c
    - curl X POST -H "Content-Type: application/json" --data-binary $'# TYPE <%= name %> gauge\n<%= name $value %>\n' ${PROMETHEUS_GATEWAY_URL}/metrics/job/oxygen_mask
